#dockyard {
   display: none;
}
 #stdin {
   color: var(--clr-white);
}
 #stdin.attack {
   background-color: var(--clr-game-input);
   background-image: url(<%= asset_url("icon_attack.svg") %>);
   background-size: 30px 30px;
   background-position: 5px;
   background-repeat: no-repeat;
}
 #stdin.defense {
   background-color: var(--clr-game-input);
   background-image: url(<%= asset_url("icon_defense.svg") %>);
   background-size: 30px 30px;
   background-position: 5px;
   background-repeat: no-repeat;
}
