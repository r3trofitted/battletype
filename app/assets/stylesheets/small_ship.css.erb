.small_ship {
   text-align: center;
   position: absolute;
   display: block;
   right: -150px;
   top: 330px;
   animation: movingleft 18s linear normal;
}
 .small_ship.leaving {
   animation-delay: 0.1s;
   animation: exitingleft 2s ease-in;
}
 .small_ship .word {
   background: var(--clr-word-label);
   border-radius: 4px;
   color: var(--clr-white);
   display: inline-block;
   font-family: Consolas, monaco, monospace;
   font-size: 0.8em;
   margin: 0 0 5px 0;
   padding: 3px 5px;
}
 .small_ship .ship {
   display: block;
   padding: 0 6px;
   background: url(<%= asset_url "ship_selected.svg" %>);
   background-size: 0% auto;
   background-repeat: no-repeat;
   background-position: center;
}
 .small_ship .ship.targeted_ship {
   background: url(<%= asset_url "ship_selected.svg" %>);
   background-size: 100% auto;
   background-repeat: no-repeat;
   background-position: center;
   transition: background-size 0.2s ease-out;
}
 .small_ship .ship svg {
   height: 50px;
   width: 70px;
}
 .small_ship .ship svg #fire01 {
   animation: shake01 0.1s ease infinite;
}
 .small_ship .ship svg #fire02 {
   animation: shake02 0.1s ease infinite;
}
 .small_ship .ship svg #Ship01 {
   animation: levitate 3s ease infinite;
   animation: levitate 2s ease infinite;
}
 .small_ship .ship svg #fuselage, .small_ship .ship svg #lights, .small_ship .ship svg #pulsar, .small_ship .ship svg #fire {
   animation: levitate_slow_left 0.2s ease infinite;
}
 .small_ship .ship svg .light {
   animation: opacity 2s ease infinite;
}
 .small_ship .ship svg .light.circle01 {
   animation-delay: 0.2s;
}
 .small_ship .ship svg .light.circle02 {
   animation-delay: 0.4s;
}
 