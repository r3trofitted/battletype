.large_ship {
   text-align: center;
   position: absolute;
   display: block;
   right: -150px;
   top: 350px;
   animation: movingleft 40s linear normal;
}
 .large_ship.leaving {
   animation-delay: 0.1s;
   animation: exitingleft 4s ease-in;
}
 .large_ship .word {
   background: var(--clr-word-label);
   border-radius: 4px;
   color: var(--clr-white);
   display: inline-block;
   font-family: Consolas, monaco, monospace;
   font-size: 0.8em;
   margin: 0 0 5px 0;
   padding: 3px 5px;
}
 .large_ship .ship {
   display: block;
   padding: 0 6px;
   background: url(<%= asset_url "ship_selected.svg" %>);
   background-size: 0% auto;
   background-repeat: no-repeat;
   background-position: center;
}
 .large_ship .ship.targeted_ship {
   background: url(<%= asset_url "ship_selected.svg" %>);
   background-size: 100% auto;
   background-repeat: no-repeat;
   background-position: center;
   transition: background-size 0.2s ease-out;
}
 .large_ship .ship svg {
   height: 120px;
}
 .large_ship .ship svg #Ship02 {
   animation: levitate 3s ease infinite;
   animation: levitate 2s ease infinite;
}
 .large_ship .ship svg #fuselage, .large_ship .ship svg #lights, .large_ship .ship svg #pulsar, .large_ship .ship svg #fire {
   animation: levitate_slow_left 0.2s ease infinite;
}
 .large_ship .ship svg #bottom_wing, .large_ship .ship svg #wing_structure02 {
   animation: levitate_slow_top 1s ease infinite;
}
 .large_ship .ship svg #top_wing, .large_ship .ship svg #wing_structure01, .large_ship .ship svg #wing_structure03 {
   animation: levitate_slow_bottom 1s ease infinite;
}
 .large_ship .ship svg #secondfuselage, .large_ship .ship svg #lightstop {
   animation: levitate_slow_bottom 2s ease infinite;
}
 .large_ship .ship svg #fire01 {
   animation: shake01 0.1s ease infinite;
}
 .large_ship .ship svg #fire02 {
   animation: shake02 0.1s ease infinite;
}
 .large_ship .ship svg .light {
   animation: opacity 2s ease infinite;
}
 .large_ship .ship svg .light.circle01 {
   animation-delay: 0.2s;
}
 .large_ship .ship svg .light.circle02 {
   animation-delay: 0.4s;
}
 .large_ship .ship svg .light.circle03 {
   animation-delay: 0.6s;
}
 .large_ship .ship svg .light.circle04 {
   animation-delay: 0.8s;
}
